<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Alt katman: Görsel -->
    <item>
        <bitmap
            android:src="@drawable/carrefour"
            android:gravity="fill"
            android:tileMode="repeat" />
    </item>
    <!-- Üst katman: Yuvarlatılmış köşeler -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" /> <!-- Köşe yarıçapı -->
            <solid android:color="#00000000" /> <!-- Şeffaf arka plan -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- Kenar çizgisi -->
        </shape>
    </item>
</layer-list>
